{{!--

registration handelbars

--}}

<h1>Register</h1>
{{#if error}}
    <div class="error">
        {{error}}
    </div>
{{/if}}
<main class="page-format">
    <form name="signup-form" id="signup-form" method="POST" action="/register">
        <div class="form-format">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>

        <div class="form-format">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>

        <div class="form-format">
            <label for="userId">User ID:</label>
            <input type="text" id="userId" name="userId" required>
        </div>

        <div class="form-format">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div class="form-format">
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>

        <div class="form-format">
            <label for="favoriteQuote">Favorite Quote:</label>
            <input type="text" id="favoriteQuote" name="favoriteQuote">
        </div>

        <div class="form-format">
            <label for="backgroundColor">Background Color:</label>
            <input type="color" id="backgroundColor" name="backgroundColor">
        </div>

        <div class="form-format">
            <label for="fontColor">Font Color:</label>
            <input type="color" id="fontColor" name="fontColor">
        </div>

        <div class="form-format">
            <label for="role">Role:</label>
            <select id="role" name="role" required>
            <option value="superuser">Super User</option>
            <option value="user">User</option>
            </select>
        </div>

        <div class="form-format">
            <button type="submit" id="submitButton" name="submitButton">Sign Up</button>
        </div>
    </form>
    <p><a href="/login">Already have an account? Click here to sign-in</a></p>
    <p><a href="/">Return to Home</a></p>
</main>